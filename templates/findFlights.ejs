<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
    <script src="../findFlightsValidation.js"></script>
	<title>Find Flights</title>
</head>

<body>
	<h1>Application</h1>
	<%- formAction %>
        <fieldset>
            <legend>
                <strong>Customer Information</strong>
            </legend>
            
            <label>Name: <input type="text" name="name"></label>
            <label>Email Address: <input type="email" name="email"></label>
        </fieldset>

		<fieldset>  
            <legend>
                <strong>Flight Criteria</strong>
            </legend>

            <strong>Trip: </strong>
            <label for="origin"><em>From</em></label>
            <input type="text" id="origin" name="origin" required>

            <label for="destination"><em>To</em></label>
            <input type="text" id="destination" name="destination" required>
            &nbsp; &nbsp;
            
            <strong>Date: </strong>
            <label for="month"><em>Month</em></label>
            <input id="month" type="number" name="month"  min="1" max="12" required>

            <label for="day"><em>Day</em></label>
            <input id="day" type="number" name="day"  min="1" max="31" required>
            &nbsp; &nbsp;

            <label>Number of Tickets: <input id="numTickets" name="numTickets" type="number" placeholder="1" min="1"  required></label>
		</fieldset>

        <fieldset>
			<legend>Additional Information</legend>
			<label><textarea rows="5" cols="80" name="additionalInformation"></textarea></label>
		</fieldset>

		<br>
		<input type="reset" value="Clear">
		<input type="submit" id="submitRequest" value="Submit Request">
		<hr>
		<a href="/">HOME</a>
	</form>
</body>
</html>
